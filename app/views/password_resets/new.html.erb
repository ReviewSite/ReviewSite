<% provide :title, 'Request password reset' %>
<h1>Reset password</h1>

<%= form_tag password_resets_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="actions"><%= submit_tag "Request password reset", class: "btn btn-large btn-primary" %></div>
<% end %>